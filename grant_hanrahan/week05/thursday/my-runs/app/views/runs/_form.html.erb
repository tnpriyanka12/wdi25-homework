<%= form_for @run do |f| %>
  <fieldset>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </fieldset>
  <fieldset>
    <%= f.label :distance %>
    <%= f.text_field :distance %>
  </fieldset>
  <fieldset>
    <%= f.label :date %>
    <%= f.date_field :date %>
  </fieldset>
  <fieldset>
    <%= f.label :country %>
    <%= f.text_field :country %>
  </fieldset>
  <fieldset>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </fieldset>
  <fieldset>
    <%= f.label :image, 'Image URL' %>
    <%= f.url_field :image %>
  </fieldset>
  <fieldset>
  <%= f.label :runner_id, 'Runner' %>
  <%= f.select :runner_id, Runner.pluck(:name, :id), include_blank: true %>
</fieldset>
  <br>
  <%= f.submit 'Save' %>
<% end %>
