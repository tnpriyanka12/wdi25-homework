<h2>Edit Place: <%= @place.name %></h2>

<form action="/places/<%= @place.id %>" method="post">

  Name: <input type="text" name="name" value="<%= @place.name %>"><br>
  Location: <input type="text" name="location" value="<%= @place.location %>"><br>
  Image: <input type="text" name="image" value="<%= @place.image %>"><br>
  Description: <input type="text" name="description" value="<%= @place.description %>"><br>
  Rating: <input type="text" name="rating" value="<%= @place.rating %>"><br>


  <button>Save</button>

</form>
